{
  "name": "danx-ui",
  "version": "0.4.0",
  "description": "Zero-dependency Vue 3 + Tailwind CSS v4 component library with three-tier theming",
  "type": "module",
  "license": "MIT",
  "author": "Dan Newman",
  "repository": {
    "type": "git",
    "url": "https://github.com/newms87/danx-ui.git"
  },
  "keywords": [
    "vue",
    "vue3",
    "components",
    "tailwind",
    "tailwindcss",
    "ui",
    "button",
    "dialog",
    "modal"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./components/button": {
      "types": "./dist/components/button/index.d.ts",
      "import": "./dist/components/button/index.js"
    },
    "./components/button/styles": "./dist/components/button/button.css",
    "./components/dialog": {
      "types": "./dist/components/dialog/index.d.ts",
      "import": "./dist/components/dialog/index.js"
    },
    "./components/dialog/useDialog": {
      "types": "./dist/components/dialog/useDialog.d.ts",
      "import": "./dist/components/dialog/useDialog.js"
    },
    "./components/code-viewer": {
      "types": "./dist/components/code-viewer/index.d.ts",
      "import": "./dist/components/code-viewer/index.js"
    },
    "./components/code-viewer/styles": "./dist/components/code-viewer/code-viewer.css",
    "./components/markdown-editor": {
      "types": "./dist/components/markdown-editor/index.d.ts",
      "import": "./dist/components/markdown-editor/index.js"
    },
    "./components/markdown-editor/styles": "./dist/components/markdown-editor/markdown-editor.css",
    "./components/infinite-scroll": {
      "types": "./dist/components/infinite-scroll/index.d.ts",
      "import": "./dist/components/infinite-scroll/index.js"
    },
    "./components/infinite-scroll/styles": "./dist/components/infinite-scroll/infinite-scroll.css",
    "./components/dialog/styles": "./dist/components/dialog/dialog.css",
    "./shared/tokens": "./dist/shared/tokens/index.css",
    "./styles": "./dist/styles.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "dev": "vite",
    "dev:check": "curl -s -o /dev/null -w '%{http_code}' http://localhost:5173 && vue-tsc --noEmit",
    "build": "vite build && vue-tsc --emitDeclarationOnly && npm run build:css",
    "build:css": "mkdir -p dist/shared/tokens dist/components/button dist/components/code-viewer dist/components/dialog dist/components/infinite-scroll dist/components/markdown-editor && cp src/shared/tokens/*.css dist/shared/tokens/ && cp src/components/button/*.css dist/components/button/ && cp src/components/code-viewer/*.css dist/components/code-viewer/ && cp src/components/dialog/*.css dist/components/dialog/ && cp src/components/infinite-scroll/*.css dist/components/infinite-scroll/ && cp src/components/markdown-editor/*.css dist/components/markdown-editor/ && cp src/styles.css dist/",
    "preview": "vite preview",
    "typecheck": "vue-tsc --noEmit",
    "lint": "eslint src --fix",
    "format": "prettier --write src",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "publish:patch": "./scripts/publish.sh patch",
    "publish:minor": "./scripts/publish.sh minor",
    "publish:major": "./scripts/publish.sh major"
  },
  "dependencies": {
    "yaml": "^2.4.5"
  },
  "peerDependencies": {
    "@vueuse/core": "^14.0.0",
    "luxon": "^3.0.0",
    "vue": "^3.5.0"
  },
  "peerDependenciesMeta": {
    "@vueuse/core": {
      "optional": true
    },
    "luxon": {
      "optional": true
    }
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.0.0",
    "@testing-library/vue": "^8.1.0",
    "@types/luxon": "^3.7.1",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vitest/coverage-v8": "^4.0.18",
    "@vue/test-utils": "^2.4.6",
    "@vueuse/core": "^14.2.1",
    "danx-icon": "^1.0.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-vue": "^10.7.0",
    "happy-dom": "^20.4.0",
    "luxon": "^3.7.2",
    "prettier": "^3.8.1",
    "tailwindcss": "^4.0.0",
    "typescript": "~5.6.0",
    "vite": "^6.0.0",
    "vite-plugin-dts": "^4.5.0",
    "vitest": "^4.0.18",
    "vue": "^3.5.0",
    "vue-eslint-parser": "^10.2.0",
    "vue-router": "^5.0.1",
    "vue-tsc": "^2.2.0"
  }
}
